<div class="row row-cols-1 row-cols-md-4 g-4">
    {{#each notes}}
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }}
                    <a href="/notes/edit/{{_id}}">
                        <i class="fa fa-pencil"></i>
                    </a>
                </h4>
                <p class="flex-grow-1 mt-2">{{ description }}</p>
                <small class="text-muted text-end mb-2">{{ formatDate createdAt }}</small>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST" class="mt-2">
                    <button type="submit" class="btn btn-danger btn-block w-100 btn-sm">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>