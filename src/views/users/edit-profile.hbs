<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header text-center">
                <h3>Actualizar Perfil</h3>
            </div>
            <div class="card-body">
                <form action="/users/edit-profile?_method=PUT" method="post">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{user.name}}" required>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="lastname" placeholder="Apellido" value="{{user.lastname}}" required>
                    </div>
                    <button class="btn btn-primary btn-block w-100">Actualizar datos</button>
                </form>
            </div>
        </div>
    </div>
</div>